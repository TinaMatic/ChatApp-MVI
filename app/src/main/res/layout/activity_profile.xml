<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileBackground"
    tools:context=".profile.ProfileActivity">

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="387dp"
        android:layout_height="197dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/happy_woman" />

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="336dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:text="John Smith"
        android:textAlignment="center"
        android:textColor="@color/darkBg"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfilePicture" />

    <TextView
        android:id="@+id/tvProfileStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Status"
        android:textAlignment="center"
        android:textColor="@color/darkBg"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfilePicture"
        app:layout_constraintVertical_bias="0.202" />

    <Button
        android:id="@+id/btnProfileSendMessage"
        android:layout_width="222dp"
        android:layout_height="45dp"
        android:layout_marginTop="68dp"
        android:background="#d1d1e0"
        android:gravity="center_horizontal|center_vertical"
        android:stateListAnimator="@drawable/state_list_animator_z"
        android:text="@string/send_message"
        android:textColor="@color/darkBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>